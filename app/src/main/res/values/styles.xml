<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Flickr.Theme.Dark.NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Flickr.Theme.Splash" parent="Flickr.Theme.Dark.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_app_window</item>
        <item name="android:statusBarColor">?android:attr/colorPrimaryDark</item>
    </style>
    <style name="Widget">
    </style>
    <style name="Flickr.Widget.TextView.Error.Inline.Message" parent="Widget">
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:paddingLeft">64dp</item>
        <item name="android:paddingRight">64dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
    </style>
    <style name="Flickr.Widget.TextView.Error.Inline.Message.Server">
        <item name="android:text">@string/inline_error_message_server</item>
    </style>
    <style name="Flickr.Widget.TextView.Error.Inline.Title.Network" parent="Widget">
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">64dp</item>
        <item name="android:paddingRight">64dp</item>
        <item name="android:text">@string/inline_error_title_network</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="android:textColor">?android:textColorTertiary</item>
    </style>

    <style name="Flickr.Widget.TextView.Error.Inline.Message.Network">
        <item name="android:text">@string/inline_error_message_network</item>
    </style>
    <style name="action_bar_text" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="text_normal" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="grey_text" parent="text_normal">
        <item name="android:textColor">@color/grey_text</item>
    </style>

</resources>
